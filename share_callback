  <body>
    <p>Paylaşım tamamlandı. Pencere otomatik kapanıyorsa birazdan kapanır.</p>
    <p><button id="btn">Kapat</button></p>

    <script>
      function tryClose() {
        // Bazı tarayıcılarda bu kombinasyon daha iyi çalışıyor
        try { window.open('', '_self'); } catch (e) {}
        try { window.close(); } catch (e) {}
      }

      // Hemen dene
      tryClose();

      // 100ms, 500ms, 1500ms tekrar dene (bazı cihazlarda gerekli)
      setTimeout(tryClose, 100);
      setTimeout(tryClose, 500);
      setTimeout(tryClose, 1500);

      document.getElementById('btn').addEventListener('click', function () {
        tryClose();
      });
    </script>
  </body>
</html>
